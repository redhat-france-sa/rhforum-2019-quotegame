<Configuration name='InfinispanServerConfig' monitorInterval='60' shutdownHook='disable'>
  <Appenders>
    <Console name='STDOUT'>
      <PatternLayout pattern='%highlight{%d{HH:mm:ss,SSS} %-5p (%t) [%c] %m%throwable}{INFO=normal, DEBUG=normal, TRACE=normal}%n'/>
    </Console>
    <RollingFile name='FILE' createOnDemand='true' fileName='${sys:infinispan.server.log.path}/server.log' filePattern='${sys:infinispan.server.log.path}/server.log.%d{yyyy-MM-dd}-%i'>
      <Policies>
        <OnStartupTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size='100 MB'/>
        <TimeBasedTriggeringPolicy/>
      </Policies>
      <PatternLayout pattern='%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p (%t) [%c] %m%throwable%n'/>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level='INFO'>
      <AppenderRef ref='STDOUT' level='TRACE'/>
      <AppenderRef ref='FILE' level='TRACE'/>
    </Root>
    <Logger name='com.arjuna' level='WARN'/>
    <Logger name='org.infinispan' level='INFO'/>
    <Logger name='org.jgroups' level='WARN'/>
  </Loggers>
</Configuration>
